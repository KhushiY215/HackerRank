
long arrayManipulation(int n, vector<vector<int>> queries) {
    vector<long> arr(n + 2, 0); // n+2 to avoid b+1 overflow

    for (auto &q : queries) {
        int a = q[0];
        int b = q[1];
        long k = q[2];

        arr[a] += k; //mark start
        arr[b + 1] -= k;//mark end
    }

    long maxVal = 0, curr = 0;
    for (int i = 1; i <= n; i++) {
        curr += arr[i];
        maxVal = max(maxVal, curr);
    }
    return maxVal;
}
